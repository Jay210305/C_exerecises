#include <iostream>
#include <string>
using namespace std;

class Alumno
{
private:
  string nombre;
  int edad;
  double promedio;

public:
  void setNombre (string n)
  {
    nombre = n;
  }

  void setEdad (int a)
  {
    edad = a;
  }

  void setPromedio (double p)
  {
    promedio = p;
  }

  string getNombre ()
  {
    return nombre;
  }

  int getEdad ()
  {
    return edad;
  }

  double getPromedio ()
  {
    return promedio;
  }
  void imprimir ()
  {
      cout << "Nombre: " << nombre << endl;
      cout << "Edad: " << edad << endl;
      cout << "Promedio: " << promedio << endl;
  }
  bool comparar(Alumno otro) {
    if (promedio < otro.getPromedio()) {
      return true;
    }
    else {
      return false;
    }
  }
};

class Grupo {
private:
  Alumno* estudiantes;
  int cantidad;
  int max;
  
public:
  Grupo(int max) {
    estudiantes = new Alumno[max];
  }


  ~Grupo() {
    delete[] estudiantes;
  }


  Alumno* getEstudiantes() {
    return estudiantes;
  }


  int getCantidad() {
    return cantidad;
  }
  
  
  void displayEstudiantes() {
    cout << "MÃ¡ximo de estudiantes en el grupo: " << this->max << endl;
    for (int i = 0; i < cantidad; i++) {
      Alumno estudiante = estudiantes[i];
      cout << "\nAlumno " << i+1 << ": " << endl;
      cout << "Nombre: " << estudiante.getNombre() << endl;
      cout << "Edad: " << estudiante.getEdad() << endl;
      cout << "Promedio: " << estudiante.getPromedio() << endl;
    }
  }

  void addEstudiante(Alumno s) {
    if (cantidad < max) {
      estudiantes[cantidad] = s;
      cantidad++;
    }
    else {
      cout << "Error: El grupo ya esta lleno." << endl;
    }
  }
};


int main() {
    Alumno alumno_1;
    alumno_1.setNombre("Pepito");
    alumno_1.setEdad(18);
    alumno_1.setPromedio(15.5);
    alumno_1.imprimir();
    return 0;
}
